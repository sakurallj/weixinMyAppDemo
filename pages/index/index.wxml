<!--index.wxml-->
<view >
  <!--顶部轮播-->
  <swiper indicator-dots="{{swiper.indicatorDots}}"  autoplay="{{swiper.autoplay}}" interval="{{swiper.interval}}" duration="{{swiper.duration}}">
    <block wx:for="{{swiper.imgUrls}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
  <!--顶部轮播-->
</view>
